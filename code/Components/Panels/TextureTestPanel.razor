@using Sandbox;
@using Sandbox.UI;
@inherits PanelComponent

<root>
    <div @ref=BlurBox class="blur box" style="transform: translateX(@CurrentRotation) rotateZ(@CurrentRotation);">
	    <div class="title">@MyStringValue</div>
    </div>
</root>

@code
{

    [Property] public string MyStringValue { get; set; } = "Hello World!";

    private Panel BlurBox { get; set; }
    private float CurrentRotation => MathF.Sin(Time.Now) * 80f;

    protected override void OnUpdate()
    {
        
    }

    /// <summary>
    /// the hash determines if the system should be rebuilt. If it changes, it will be rebuilt
    /// </summary>
    protected override int BuildHash() => System.HashCode.Combine( MyStringValue, CurrentRotation );
}
